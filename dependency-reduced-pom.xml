  <distributionManagement>
    <repository>
      <id>volmit</id>
      <url>http://nexus.volmit.com/content/repositories/volmit</url>
    </repository>
  </distributionManagement>
  <properties>
    <api.version>3</api.version>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>1.8</maven.compiler.source>
    <development.location>${user.home}\Documents\development\servers\dynamic\plugins\${project.name}.jar</development.location>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javadoc.opts>-Xdoclint:none</javadoc.opts>
    <skip.copy>false</skip.copy>
    <libs>${project.basedir}/lib</libs>
  </properties>
</project>

